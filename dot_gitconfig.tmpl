[core]
    excludesfile = ~/.gitignore

[user]
    name = Josh Kunz
    email = {{ .email }}
{{- if not .work }}
    signingkey = ssh-rsa 
{{- end }}

[color]
    ui = auto

[push]
    default = upstream
    autoSetupRemote = true

[pull]
    rebase = true

[merge]
    tool = vimdiff

[mergetool]
    prompt = false

[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[alias]
    last = !git --no-pager log -n 1 --pretty=\"format:%h\"
    pl = log --pretty=\"tformat:%C(auto)%h %>(8,trunc)%ar %>(10,trunc)%C(bold green)%an%Creset %s%C(auto)%d\"
    w = diff --minimal --color-words
    # "Show Pull Diff"
    pdiff = diff -b "@{1}"
    p = push --force-with-lease
    pu = push --set-upstream origin HEAD
    b = branch
    co = checkout
    fish = !fish -c
    reword = commit --amend
    cob = fish git-cob
    mt = mergetool

{{- if .work }}
    dance = fish git-dance
    deletemerged = fish git-deletemerged
    rr = fish git-rr
    ugh = fish git-ugh
{{- end }}

{{- if hasKey . "gitHost" }}
# For custom git hosts
[hub]
	host = {{ .gitHost }}
{{- end }}

{{- if not .work }}
# For GPG Signing of commits
[init]
	defaultBranch = main

[credential]
	helper = cache

[commit]
	gpgsign = true

[gpg]
	format = ssh
{{- end }}
